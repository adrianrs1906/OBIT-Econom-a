    <script>
        // Datos de ejemplo basados en el CSV proporcionado
        const tourismData = {
            years: [2018, 2019, 2020, 2021, 2022, 2023, 2024],
            visitors: {
                aereo: [12500000, 13200000, 3500000, 9800000, 14500000, 16800000, 17500000],
                terrestre: [3200000, 3500000, 1200000, 2800000, 4200000, 4800000, 5200000],
                cruceros: [5800000, 6200000, 500000, 3200000, 5500000, 6100000, 6500000]
            },
            spending: {
                aereo: [12500000000, 13200000000, 3500000000, 9800000000, 14500000000, 16800000000, 17500000000],
                terrestre: [3200000000, 3500000000, 1200000000, 2800000000, 4200000000, 4800000000, 5200000000],
                cruceros: [580000000, 620000000, 50000000, 320000000, 550000000, 610000000, 650000000]
            },
            monthly: {
                labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
                visitors: [1850000, 1750000, 1920000, 1880000, 1950000, 2100000, 2250000, 2200000, 1950000, 2050000, 2150000, 2400000]
            }
        };

        // Inicializar gr√°ficos
        document.addEventListener('DOMContentLoaded', function() {
            // Gr√°fico de evoluci√≥n de visitantes por a√±o
            const visitorsCtx = document.getElementById('visitorsChart').getContext('2d');
            const visitorsChart = new Chart(visitorsCtx, {
                type: 'line',
                data: {
                    labels: tourismData.years,
                    datasets: [
                        {
                            label: 'A√©reo',
                            data: tourismData.visitors.aereo,
                            borderColor: '#3498db',
                            backgroundColor: 'rgba(52, 152, 219, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Terrestre',
                            data: tourismData.visitors.terrestre,
                            borderColor: '#2ecc71',
                            backgroundColor: 'rgba(46, 204, 113, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Cruceros',
                            data: tourismData.visitors.cruceros,
                            borderColor: '#9b59b6',
                            backgroundColor: 'rgba(155, 89, 182, 0.1)',
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Visitantes por Tipo de Transporte (2018-2024)'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'N√∫mero de Visitantes'
                            }
                        }
                    }
                }
            });

            // Gr√°fico de distribuci√≥n por tipo de transporte
            const transportCtx = document.getElementById('transportChart').getContext('2d');
            const transportChart = new Chart(transportCtx, {
                type: 'doughnut',
                data: {
                    labels: ['A√©reo', 'Terrestre', 'Cruceros'],
                    datasets: [{
                        data: [17500000, 5200000, 6500000],
                        backgroundColor: [
                            '#3498db',
                            '#2ecc71',
                            '#9b59b6'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: true,
                            text: 'Distribuci√≥n de Visitantes 2024'
                        }
                    }
                }
            });

            // Gr√°fico de gasto por tipo de transporte
            const spendingCtx = document.getElementById('spendingChart').getContext('2d');
            const spendingChart = new Chart(spendingCtx, {
                type: 'bar',
                data: {
                    labels: ['A√©reo', 'Terrestre', 'Cruceros'],
                    datasets: [{
                        label: 'Gasto Total (USD)',
                        data: [17500000000, 5200000000, 650000000],
                        backgroundColor: [
                            'rgba(52, 152, 219, 0.7)',
                            'rgba(46, 204, 113, 0.7)',
                            'rgba(155, 89, 182, 0.7)'
                        ],
                        borderColor: [
                            'rgb(52, 152, 219)',
                            'rgb(46, 204, 113)',
                            'rgb(155, 89, 182)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Gasto por Tipo de Transporte 2024'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'USD (en miles de millones)'
                            },
                            ticks: {
                                callback: function(value) {
                                    return '$' + (value / 1000000000).toFixed(1) + 'B';
                                }
                            }
                        }
                    }
                }
            });

            // Gr√°fico de tendencia mensual
            const monthlyTrendCtx = document.getElementById('monthlyTrendChart').getContext('2d');
            const monthlyTrendChart = new Chart(monthlyTrendCtx, {
                type: 'line',
                data: {
                    labels: tourismData.monthly.labels,
                    datasets: [{
                        label: 'Visitantes',
                        data: tourismData.monthly.visitors,
                        borderColor: '#e74c3c',
                        backgroundColor: 'rgba(231, 76, 60, 0.1)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Tendencia Mensual de Visitantes 2024'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'N√∫mero de Visitantes'
                            }
                        }
                    }
                }
            });

            // Funcionalidad de filtros
            document.getElementById('year-filter').addEventListener('change', updateCharts);
            document.getElementById('transport-filter').addEventListener('change', updateCharts);
            document.getElementById('category-filter').addEventListener('change', updateCharts);
            document.getElementById('variable-filter').addEventListener('change', updateCharts);

            function updateCharts() {
                // En una implementaci√≥n real, aqu√≠ se har√≠a una llamada a una API
                // o se filtrar√≠an los datos seg√∫n los criterios seleccionados
                console.log('Filtros actualizados:', {
                    year: document.getElementById('year-filter').value,
                    transport: document.getElementById('transport-filter').value,
                    category: document.getElementById('category-filter').value,
                    variable: document.getElementById('variable-filter').value
                });
                
                // Simular actualizaci√≥n de datos
                // En un entorno real, esto actualizar√≠a los gr√°ficos con nuevos datos filtrados
            }
        });
    </script>
